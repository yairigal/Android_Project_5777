<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:attr/colorButtonNormal">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pBarAttractionFragment"
        android:visibility="gone"
        android:layout_weight="1" />

    <ExpandableListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:groupIndicator="@null"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Attlist"
        android:name="project.android.com.second_app.controller.AttractionsListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@color/cardview_light_background"
        tools:context="project.android.com.second_app.controller.AttractionsListFragment"
        android:scrollbars="none"
        android:footerDividersEnabled="true" />

</LinearLayout>
